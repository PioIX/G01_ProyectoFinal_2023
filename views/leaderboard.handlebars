                </tr>
            </thead>
            <tbody>
                  {{#each pibardos}}
                <tr>
                <td>{{user}}</td>
                <td>{{puntaje}}</td>
                </tr>
                 {{/each}}
            </tbody>
            </table>
        </div>
    </div>
